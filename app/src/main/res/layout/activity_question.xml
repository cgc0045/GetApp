<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androiddevelopment.carlosjesus.getapp.QuestionActivity">

    <TextView
        android:id="@+id/question"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/ans4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ans3"
        android:layout_below="@+id/ans3"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:text="Button" />

    <Button
        android:id="@+id/ans3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ans2"
        android:layout_below="@+id/ans2"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:text="Button" />

    <Button
        android:id="@+id/ans2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ans1"
        android:layout_below="@+id/ans1"
        android:layout_marginTop="26dp"
        android:background="@android:color/transparent"
        android:text="Button" />

    <Button
        android:id="@+id/ans1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@android:color/transparent"
        android:text="Button" />

</RelativeLayout>
